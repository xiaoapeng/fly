menuconfig PACKAGE_EHIP_TOOLS
    bool "EHIP Tools Configuration"
    help
      Enable support for the ehip tools.
      Selecting this option makes subcommands available.
    depends on PACKAGE_EVENTHUB_OS
    depends on PACKAGE_EHIP
    depends on PACKAGE_EHSHELL
    select PACKAGE_ARGUMENT_PARSER

if PACKAGE_EHIP_TOOLS

config PACKAGE_EHIP_TOOLS_PING
    bool "Enable ping command"
    default n
    help
      Enable the ping command in the ehip tool.

config PACKAGE_EHIP_TOOLS_NSLOOKUP
    bool "Enable nslookup command"
    default n
    help
      Enable the nslookup command in the ehip tool.

config PACKAGE_EHIP_TOOLS_TELNET
    bool "Enable telnet command"
    default n
    help
      Enable the telnet command in the ehip tool.

config PACKAGE_EHIP_TOOLS_IFCONFIG
    bool "Enable ifconfig command"
    default n
    help
      Enable the ifconfig command in the ehip tool.

config PACKAGE_EHIP_TOOLS_ROUTE
    bool "Enable route command"
    default n
    help
      Enable the route command in the ehip tool.

config PACKAGE_EHIP_TOOLS_UDP_ECHO
    bool "Enable udp echo command"
    default n
    help
      Enable the udp echo command in the ehip tool.

config PACKAGE_EHIP_TOOLS_TCP_ECHO
    bool "Enable tcp echo command"
    default n
    help
      Enable the tcp echo server command in the ehip tool.

endif
